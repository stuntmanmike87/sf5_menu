{% extends 'base.html.twig' %}

{% block title %}Plat{% endblock %}

{% block body %}
    <h1>Plat</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plat.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ plat.nom }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>
                    {% if plat.Category.name is defined %}
                    {{ plat.Category.name }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ plat.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('plat_index') }}">Retour</a>

    <a href="{{ path('plat_edit', {'id': plat.id}) }}">Modifier</a>
    {# {{ include('plat/_form.html.twig', {'button_label': 'Modifier'}) }} #}

    {{ include('plat/_delete_form.html.twig') }}
{% endblock %}
